---
const { lang } = Astro.props;

// Definiamo i link in base alla lingua attuale
const navLinks = {
  it: { 
    menu: "/it/menu", 
    prenota: "/it/prenota", 
    switchLabel: "EN ðŸ‡¬ðŸ‡§", 
    switchLink: "/en/",
    labelMenu: "Menu",
    labelPrenota: "Prenota Tavolo"
  },
  en: { 
    menu: "/en/menu", 
    prenota: "/en/book", 
    switchLabel: "IT ðŸ‡®ðŸ‡¹", 
    switchLink: "/it/",
    labelMenu: "Menu",
    labelPrenota: "Book a Table"
  }
};

const t = lang === 'en' ? navLinks.en : navLinks.it;
---

<nav class="bg-white/90 backdrop-blur-md sticky top-0 z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 h-20 flex justify-between items-center">
    <a href={lang === 'en' ? '/en/' : '/it/'} class="text-2xl font-black text-red-600 tracking-tighter">
      PIZZERIA DA MARIO
    </a>
    
    <ul class="flex gap-6 items-center font-bold text-gray-700">
      <li><a href={t.menu} class="hover:text-red-600 transition">{t.labelMenu}</a></li>
      <li>
        <a href={t.switchLink} class="bg-gray-100 px-3 py-1 rounded-full text-xs hover:bg-gray-200 transition">
          {t.switchLabel}
        </a>
      </li>
      <li>
        <a href={t.prenota} class="bg-red-600 text-white px-5 py-2 rounded-full hover:bg-red-700 transition shadow-lg shadow-red-200">
          {t.labelPrenota}
        </a>
      </li>
    </ul>
  </div>
</nav>