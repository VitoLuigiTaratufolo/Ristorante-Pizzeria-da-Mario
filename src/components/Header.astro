---
const { lang } = Astro.props;

const navLinks = {
  it: { 
    menu: "/it/menu", 
    prenota: "/it/prenota", 
    switchLabel: "EN ðŸ‡¬ðŸ‡§", 
    switchLink: "/en/",
    labelMenu: "Menu",
    labelPrenota: "Prenota"
  },
  en: { 
    menu: "/en/menu", 
    prenota: "/en/book", 
    switchLabel: "IT ðŸ‡®ðŸ‡¹", 
    switchLink: "/it/",
    labelMenu: "Menu",
    labelPrenota: "Book"
  }
};

const t = lang === 'en' ? navLinks.en : navLinks.it;
---

<nav class="bg-white/95 backdrop-blur-md sticky top-0 z-[100] border-b border-gray-100 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 h-20 flex items-center">
    
    <div class="flex items-center flex-1 gap-4">
        <a href={lang === 'en' ? '/en/' : '/it/'} class="flex flex-col line-height-1">
        <span class="text-xl md:text-2xl font-black text-red-600 tracking-tighter leading-none">
            DA MARIO
        </span>
        <span class="text-[10px] md:text-xs font-bold text-gray-500 uppercase tracking-[0.2em] leading-none">
            Ristorante â€¢ Pizzeria
        </span>
        </a>
  
        <a href={t.switchLink} class="bg-gray-100 px-2 py-1 rounded-md text-[10px] font-bold hover:bg-gray-200 transition md:hidden">
        {t.switchLabel}
        </a>
    </div>
    
    <ul class="hidden md:flex gap-8 items-center font-bold text-gray-700">
      <li><a href={t.menu} class="hover:text-red-600 transition">{t.labelMenu}</a></li>
      <li>
        <a href={t.switchLink} class="bg-gray-100 px-3 py-1 rounded-full text-xs hover:bg-gray-200 transition">
          {t.switchLabel}
        </a>
      </li>
      <li>
        <a href={t.prenota} class="bg-red-600 text-white px-6 py-2.5 rounded-full hover:bg-red-700 transition shadow-lg shadow-red-200">
          {t.labelPrenota}
        </a>
      </li>
    </ul>

    <div class="md:hidden">
      <button id="menu-btn" class="p-2 text-gray-600" aria-label="Menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100 p-6 space-y-6 shadow-2xl">
    <a href={t.menu} class="block text-2xl font-black text-gray-800 border-b border-gray-100 pb-4">{t.labelMenu}</a>
    <a href={t.prenota} class="block bg-red-600 text-white text-center py-5 rounded-2xl text-xl font-black shadow-lg">
      {t.labelPrenota}
    </a>
  </div>
</nav>

<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>