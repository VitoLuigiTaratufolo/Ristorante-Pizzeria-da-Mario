---
import Header from '../../components/Header.astro';
import '../../styles/global.css';

const categories = [
  {
    title: "From the Kitchen",
    items: [
      { name: "Seafood Spaghetti", desc: "Fresh Mediterranean seafood, cherry tomatoes, and parsley", price: "15.00" },
      { name: "Grilled Sliced Beef", desc: "Served with rocket, parmesan shavings, and balsamic reduction", price: "18.00" },
    ]
  },
  {
    title: "Classic Pizzas",
    items: [
      { name: "Margherita", desc: "San Marzano tomato, fior di latte mozzarella, fresh basil, EVO oil", price: "7.50" },
      { name: "Marinara", desc: "Tomato, garlic, oregano, EVO oil", price: "6.00" },
      { name: "Diavola", desc: "Tomato, mozzarella, spicy salami, black olives", price: "9.00" }
    ]
  },
  {
    title: "Gourmet Selection",
    items: [
      { name: "Pistachio", desc: "Pistachio pesto, mozzarella, Bologna mortadella, crushed pistachios", price: "13.00" },
      { name: "Truffle", desc: "Truffle cream, porcini mushrooms, mozzarella, parmesan shavings", price: "14.50" }
    ]
  }
];
---
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>The Menu | Pizzeria Da Mario</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>
<body class="bg-stone-50">
    <Header lang="en" />
    <main class="max-w-4xl mx-auto py-16 px-4">
        <h1 class="text-5xl font-black text-center mb-16 text-stone-800">Our Menu</h1>
        
        {categories.map(cat => (
            <div class="mb-12">
                <h2 class="text-2xl font-bold text-red-600 border-b-2 border-red-100 pb-2 mb-8 uppercase tracking-widest">{cat.title}</h2>
                <div class="grid gap-8">
                    {cat.items.map(p => (
                        <div class="flex justify-between items-start group">
                            <div class="max-w-2xl">
                                <h3 class="text-xl font-bold group-hover:text-red-600 transition">{p.name}</h3>
                                <p class="text-stone-500 italic text-sm mt-1">{p.desc}</p>
                            </div>
                            <span class="text-xl font-black text-stone-800 italic">â‚¬{p.price}</span>
                        </div>
                    ))}
                </div>
            </div>
        ))}
    </main>
</body>
</html>