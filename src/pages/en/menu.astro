---
import Header from '../../components/Header.astro';
import '../../styles/global.css';

const categories = [
  {
    title: "Matera's Traditional Kitchen",
    items: [
      { name: "Orecchiette al Tegamino", desc: "Homemade pasta with meat ragù, mozzarella, and local cheese, baked in a clay pot", price: "13.00" },
      { name: "Matera's Crapiata", desc: "Traditional Sassi city soup with local legumes and cereals", price: "10.00" },
      { name: "Cod & Crunchy Peppers", desc: "Salted cod served with Senise crunchy peppers (Cruschi)", price: "16.00" }
    ]
  },
  {
    title: "Wood-Fired Pizzeria",
    items: [
      { name: "The Lucanian", desc: "Tomato, mozzarella, crunchy peppers, and cacioricotta cheese", price: "12.00" },
      { name: "Classic Margherita", desc: "San Marzano tomato, fior di latte, fresh basil", price: "7.50" }
    ]
  }
];
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu | Da Mario Restaurant & Pizzeria</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
      h1, h2 { font-family: 'Playfair Display', serif; }
      body { font-family: 'Inter', sans-serif; }
    </style>
  </head>
  <body class="bg-stone-50 text-stone-900">
    <Header lang="en" />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
        <div class="text-center mb-12 md:mb-20">
            <span class="text-red-500 font-bold uppercase tracking-widest text-sm mb-2 block">Traditional Lucanian Flavors</span>
            <h1 class="text-4xl md:text-6xl font-black text-stone-800 italic">Our Menu</h1>
        </div>

        <div class="max-w-4xl mx-auto">
            {categories.map(cat => (
                <div class="mb-16">
                    <h2 class="text-2xl md:text-3xl font-bold text-red-600 border-b-2 border-red-100 pb-2 mb-8 uppercase tracking-tighter">
                        {cat.title}
                    </h2>
                    <div class="space-y-10">
                        {cat.items.map(p => (
                            <div class="flex flex-col sm:flex-row justify-between items-baseline gap-2 group">
                                <div class="flex-1">
                                    <h3 class="text-xl font-bold group-hover:text-red-600 transition duration-300">
                                        {p.name}
                                    </h3>
                                    <p class="text-stone-500 italic text-sm mt-1 leading-relaxed pr-4">
                                        {p.desc}
                                    </p>
                                </div>
                                <span class="text-xl font-black text-stone-800 tabular-nums">
                                    €{p.price}
                                </span>
                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>
    </main>

    <footer class="bg-stone-900 text-stone-500 py-12 text-center">
      <p>© 2026 Da Mario Restaurant & Pizzeria - Matera</p>
    </footer>
  </body>
</html>