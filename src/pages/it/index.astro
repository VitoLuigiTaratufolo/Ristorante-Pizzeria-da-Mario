---
import Header from '../../components/Header.astro';
import '../../styles/global.css';

// Elenco dei file nella cartella public/immagini/immaginiCentrali/
// Aggiungi qui i nomi dei file man mano che li inserisci nella cartella
const nomiImmagini = [
  'cialdamaterana.jpg',
  'faveecicorie.jpg',
  'pizzahero.jpg',
  'orecchiettefunghiesalsiccia.jpg',
  'pizzeMultiple.png'
];

const images = nomiImmagini.map(nome => `/immagini/immaginiCentrali/${nome}`);
---

<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Da Mario | Ristorante Tipico Materano & Pizzeria</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
      h1, h2 { font-family: 'Playfair Display', serif; }
      body { font-family: 'Inter', sans-serif; }
    </style>
  </head>
  
  <body class="bg-stone-50 text-stone-900 m-0 p-0">
    <Header lang="it" />

    <main>
      <section class="relative min-h-screen w-full flex items-center justify-center overflow-hidden bg-stone-900 pt-20">
        <div class="absolute inset-0 z-0" id="carousel">
            {images.map((src, index) => (
            <img 
                src={src} 
                class={`absolute inset-0 w-full h-full object-cover brightness-[0.45] transition-opacity duration-[1500ms] ease-in-out ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
                alt="Atmosfera Ristorante Pizzeria Da Mario"
            />
            ))}
        </div>

        <div class="relative z-10 text-center px-6 w-full max-w-5xl flex flex-col items-center justify-center py-10">
            <span class="text-red-500 font-bold uppercase tracking-[0.2em] text-xs md:text-sm mb-4 block">
            Tradizione Materana dal 1990
            </span>
            
            <h1 class="text-3xl sm:text-4xl md:text-7xl text-white font-black mb-6 leading-tight">
            Il gusto autentico della <br class="hidden sm:block" />
            <span class="text-red-600">Cucina Lucana</span>
            </h1>
            
            <p class="text-base md:text-xl text-stone-200 mb-8 md:mb-10 max-w-2xl mx-auto font-light leading-relaxed">
            Dalle ricette storiche dei Sassi di Matera alla pizza cotta nel forno a legna. 
            Un'esperienza per 170 ospiti.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
                <a href="/it/prenota" class="bg-red-600 text-white px-8 py-4 rounded-full font-bold hover:bg-red-700 transition shadow-lg text-center">
                    Prenota un Tavolo
                </a>
                <a href="/it/menu" class="bg-white/10 backdrop-blur-md text-white border border-white/30 px-8 py-4 rounded-full font-bold hover:bg-white/20 transition text-center">
                    Scopri il Menu
                </a>
            </div>
        </div>
        </section>

      <section class="py-20 px-4 max-w-7xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-6 text-stone-800">Oltre la Pizza, la Storia</h2>
        <p class="text-lg text-stone-600 max-w-3xl mx-auto leading-relaxed italic">
          "Non siamo solo una pizzeria. Portiamo in tavola l'anima di Matera, dai Peperoni Cruschi alle orecchiette fatte in casa, serviti in un ambiente spazioso e accogliente."
        </p>
      </section>
    </main>

    <footer class="bg-stone-900 text-stone-500 py-12 text-center border-t border-stone-800">
      <p>Â© 2026 Da Mario Ristorante Pizzeria - Matera</p>
    </footer>

    <script>
      const carousel = document.getElementById('carousel');
      if (carousel) {
        const images = carousel.querySelectorAll('img');
        let currentIndex = 0;
        if (images.length > 1) {
          setInterval(() => {
            images[currentIndex].classList.replace('opacity-100', 'opacity-0');
            currentIndex = (currentIndex + 1) % images.length;
            images[currentIndex].classList.replace('opacity-0', 'opacity-100');
          }, 4000);
        }
      }
    </script>
  </body>
</html>