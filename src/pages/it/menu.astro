---
import Header from '../../components/Header.astro';
import '../../styles/global.css';

const categorie = [
  {
    titolo: "Dalla Cucina Materana",
    piatti: [
      { nome: "Orecchiette al Tegamino", desc: "Orecchiette con ragù di carne, mozzarella e formaggio locale, gratinate", prezzo: "13.00" },
      { nome: "Crapiata Materana", desc: "Zuppa tradizionale di legumi e cereali tipica dei Sassi", prezzo: "10.00" },
      { nome: "Peperoni Cruschi e Baccalà", desc: "Baccalà dissalato con peperoni di Senise croccanti", prezzo: "16.00" }
    ]
  },
  {
    titolo: "Dalla Pizzeria (Forno a Legna)",
    piatti: [
      { nome: "La Lucana", desc: "Pomodoro, mozzarella, peperone crusco e cacioricotta", prezzo: "12.00" },
      { nome: "Margherita", desc: "Pomodoro San Marzano, fior di latte, basilico fresco", prezzo: "7.50" }
    ]
  }
];
---
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu | Da Mario Ristorante Pizzeria</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
      h1, h2 { font-family: 'Playfair Display', serif; }
      body { font-family: 'Inter', sans-serif; }
    </style>
  </head>
  <body class="bg-stone-50 text-stone-900">
    <Header lang="it" />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
        <div class="text-center mb-12 md:mb-20">
            <span class="text-red-500 font-bold uppercase tracking-widest text-sm mb-2 block">I sapori della terra lucana</span>
            <h1 class="text-4xl md:text-6xl font-black text-stone-800 italic">Il Nostro Menu</h1>
        </div>

        <div class="max-w-4xl mx-auto">
            {categorie.map(cat => (
                <div class="mb-16">
                    <h2 class="text-2xl md:text-3xl font-bold text-red-600 border-b-2 border-red-100 pb-2 mb-8 uppercase tracking-tighter">
                        {cat.titolo}
                    </h2>
                    <div class="space-y-10">
                        {cat.piatti.map(p => (
                            <div class="flex flex-col sm:flex-row justify-between items-baseline gap-2 group">
                                <div class="flex-1">
                                    <h3 class="text-xl font-bold group-hover:text-red-600 transition duration-300">
                                        {p.nome}
                                    </h3>
                                    <p class="text-stone-500 italic text-sm mt-1 leading-relaxed pr-4">
                                        {p.desc}
                                    </p>
                                </div>
                                <span class="text-xl font-black text-stone-800 tabular-nums">
                                    €{p.prezzo}
                                </span>
                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>
    </main>

    <footer class="bg-stone-900 text-stone-500 py-12 text-center">
      <p>© 2026 Da Mario Ristorante Pizzeria - Matera</p>
    </footer>
  </body>
</html>