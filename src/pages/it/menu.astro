---
import Header from '../../components/Header.astro';
import '../../styles/global.css';

const categorie = [
  {
    titolo: "Dalla Cucina",
    piatti: [ // Usiamo lo stesso nome variabile per non rompere il loop sotto
      { nome: "Spaghetto allo Scoglio", desc: "Frutti di mare freschi, pomodorino e prezzemolo", prezzo: "15.00" },
      { nome: "Tagliata di Manzo", desc: "Rucola, grana e riduzione di aceto balsamico", prezzo: "18.00" }
    ]
  },
  {
    titolo: "Le Classiche",
    piatti: [
      { nome: "Margherita", desc: "Pomodoro San Marzano, mozzarella fior di latte, basilico fresco, olio EVO", prezzo: "7.50" },
      { nome: "Marinara", desc: "Pomodoro, aglio, origano, olio EVO", prezzo: "6.00" },
      { nome: "Diavola", desc: "Pomodoro, mozzarella, salame piccante, olive nere", prezzo: "9.00" }
    ]
  },
  {
    titolo: "Le Speciali",
    piatti: [
      { nome: "Pistacchiosa", desc: "Pesto di pistacchio, mozzarella, mortadella Bologna, granella di pistacchio", prezzo: "13.00" },
      { nome: "Tartufata", desc: "Crema di tartufo, funghi porcini, mozzarella, scaglie di parmigiano", prezzo: "14.50" }
    ]
  }
];
---
<html lang="it">
<head>
    <meta charset="UTF-8" />
    <title>Il Menu | Ristorante Pizzeria Da Mario</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>
<body class="bg-stone-50">
    <Header lang="it" />
    <main class="max-w-4xl mx-auto py-16 px-4">
        <h1 class="text-5xl font-black text-center mb-16 text-stone-800">Il Nostro Menu</h1>
        
        {categorie.map(cat => (
            <div class="mb-12">
                <h2 class="text-2xl font-bold text-red-600 border-b-2 border-red-100 pb-2 mb-8 uppercase tracking-widest">{cat.titolo}</h2>
                <div class="grid gap-8">
                    {cat.piatti.map(p => (
                        <div class="flex justify-between items-start group">
                            <div class="max-w-2xl">
                                <h3 class="text-xl font-bold group-hover:text-red-600 transition">{p.nome}</h3>
                                <p class="text-stone-500 italic text-sm mt-1">{p.desc}</p>
                            </div>
                            <span class="text-xl font-black text-stone-800 italic">â‚¬{p.prezzo}</span>
                        </div>
                    ))}
                </div>
            </div>
        ))}
    </main>
</body>
</html>